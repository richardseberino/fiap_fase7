#!/bin/bash

# Database Setup Script
# This script creates the database, user, and schema based on config/database.yml
# Designed to work with MySQL 8 running in Docker

set -e  # Exit on any error

# Color codes for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get script directory
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PROJECT_ROOT="$( cd "$SCRIPT_DIR/.." && pwd )"

SCHEMA_FILE="$PROJECT_ROOT/db/schema.sql"

echo "============================================================"
echo "Database Setup Script"
echo "============================================================"

# Load database configuration from YAML file
echo -e "\n${YELLOW}Loading database configuration from config/database.yml...${NC}"
source "$SCRIPT_DIR/utils/read-db-config"

echo -e "${GREEN}✓ Configuration loaded successfully${NC}"
echo "  Database: $DB_NAME"
echo "  Host: $DB_HOST:$DB_PORT"
echo "  User: $DB_USER"

# Check if Docker is installed
if ! command -v docker &> /dev/null; then
    echo -e "${RED}Error: Docker is not installed${NC}"
    echo "Please install Docker first"
    exit 1
fi

# Check if MySQL container is running
echo -e "\n${YELLOW}Checking MySQL Docker container...${NC}"
if ! docker ps --format '{{.Names}}' | grep -q "^${DB_CONTAINER}$"; then
    echo -e "${RED}Error: MySQL container '$DB_CONTAINER' is not running${NC}"
    echo "Please start your MySQL container first"
    echo "Available containers:"
    docker ps --format "  - {{.Names}}"
    exit 1
fi
echo -e "${GREEN}✓ MySQL container '$DB_CONTAINER' is running${NC}"

# Check if schema.sql exists
if [ ! -f "$SCHEMA_FILE" ]; then
    echo -e "${RED}Error: Schema file not found at $SCHEMA_FILE${NC}"
    exit 1
fi

# Prompt for MySQL root password
echo ""
read -sp "Enter MySQL root password (press Enter if no password): " MYSQL_ROOT_PASSWORD
echo ""

# Build password flag for MySQL commands
if [ -z "$MYSQL_ROOT_PASSWORD" ]; then
    ROOT_PASSWORD_FLAG=""
else
    ROOT_PASSWORD_FLAG="-p${MYSQL_ROOT_PASSWORD}"
fi

# Test MySQL connection
echo -e "\n${YELLOW}[1/4] Testing MySQL connection...${NC}"
if ! docker exec -i "$DB_CONTAINER" mysql -u root $ROOT_PASSWORD_FLAG -e "SELECT 1;" &> /dev/null; then
    echo -e "${RED}Error: Cannot connect to MySQL. Please check your root password.${NC}"
    exit 1
fi
echo -e "${GREEN}✓ MySQL connection successful${NC}"

# Create database
echo -e "\n${YELLOW}[2/4] Creating database '$DB_NAME'...${NC}"
docker exec -i "$DB_CONTAINER" mysql -u root $ROOT_PASSWORD_FLAG <<EOF
CREATE DATABASE IF NOT EXISTS \`$DB_NAME\` CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
EOF
echo -e "${GREEN}✓ Database '$DB_NAME' created or already exists${NC}"

# Create user and grant privileges (if different from root)
if [ "$DB_USER" != "root" ]; then
    echo -e "\n${YELLOW}[3/4] Creating user '$DB_USER' and granting privileges...${NC}"
    docker exec -i "$DB_CONTAINER" mysql -u root $ROOT_PASSWORD_FLAG <<EOF
CREATE USER IF NOT EXISTS '$DB_USER'@'%' IDENTIFIED BY '$DB_PASSWORD';
GRANT ALL PRIVILEGES ON \`$DB_NAME\`.* TO '$DB_USER'@'%';
FLUSH PRIVILEGES;
EOF
    echo -e "${GREEN}✓ User '$DB_USER' created and privileges granted${NC}"
else
    echo -e "\n${YELLOW}[3/4] Skipping user creation (using root)${NC}"
fi

# Build password flag for application user
if [ "$DB_USER" = "root" ]; then
    USER_PASSWORD_FLAG="$ROOT_PASSWORD_FLAG"
elif [ -z "$DB_PASSWORD" ]; then
    USER_PASSWORD_FLAG=""
else
    USER_PASSWORD_FLAG="-p${DB_PASSWORD}"
fi

# Run schema.sql
echo -e "\n${YELLOW}[4/4] Running schema.sql to create tables...${NC}"
docker exec -i "$DB_CONTAINER" mysql -u "$DB_USER" $USER_PASSWORD_FLAG "$DB_NAME" < "$SCHEMA_FILE"
echo -e "${GREEN}✓ Schema created successfully${NC}"

echo ""
echo "============================================================"
echo -e "${GREEN}Database setup completed successfully!${NC}"
echo "============================================================"
echo ""
echo "Database Details:"
echo "  Host: $DB_HOST"
echo "  Port: $DB_PORT"
echo "  Database: $DB_NAME"
echo "  User: $DB_USER"
echo ""
echo "Next step: Run './scripts/db-seed' to populate the database with initial data"
echo ""